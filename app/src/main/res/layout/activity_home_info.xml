<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeInfoActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/bg"
    android:padding="15dp"
    >

    <ImageView
        android:id="@+id/home_info_img"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_foreground"
        />
    <TextView
        android:id="@+id/home_info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home sweet home"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/home_info_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15.5dp"
        android:text="Description"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/home_info_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="10024 BDT"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/home_buy_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Buy"
                android:background="@color/white"
                android:visibility="gone"
                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>